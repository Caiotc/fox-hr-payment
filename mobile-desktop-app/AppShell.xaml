<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="mobile_desktop_app.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:mobile_desktop_app"
    xmlns:loginPage="clr-namespace:mobile_desktop_app.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    >
    <FlyoutItem Route="Login">
        <ShellContent ContentTemplate="{DataTemplate loginPage:LoginPage}"/>
    </FlyoutItem>

    <ShellContent
     Title="Home"
     ContentTemplate="{DataTemplate local:MainPage}"
     Route="MainPage" />

</Shell>
