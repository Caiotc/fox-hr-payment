<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="mobile_desktop_app.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:mobile_desktop_app"
    xmlns:loginPage="clr-namespace:mobile_desktop_app.Views"    
    xmlns:ViewModel="clr-namespace:mobile_desktop_app.ViewModels"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    
    Shell.NavBarIsVisible="False"
    Shell.TabBarIsVisible="False"
    Shell.FlyoutBehavior="Disabled"
    >
    
    
    <ShellContent
        Title="login"
        ContentTemplate="{DataTemplate loginPage:LoginPage}"
        Route="LoginPage"
        FlyoutItemIsVisible="False"
        Icon="dotnet_bot.png"   
            />

</Shell>
